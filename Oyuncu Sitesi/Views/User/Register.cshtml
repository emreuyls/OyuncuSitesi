@model RegisterModelView
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="container">
        <form asp-action="Register" method="post" asp-antiforgery="true" class="form-horizontal form-without-legend">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label for="inputEmail4">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="inputEmail4">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label for="inputPassword4">Şifre</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="inputAddress">Şifre Tekrar</label>
                <input asp-for="RePassword" class="form-control" />
            </div>
            <div class="form-group">
                <label for="inputAddress">Doğum Tarihi</label>
                <input asp-for="Birthdate" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input asp-for="Gender" type="radio" value="True" />
                    <label class="form-check-label" for="inlineRadio1">Erkek</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="Gender" type="radio" value="False" />

                    <label class="form-check-label" for="inlineRadio2">Kadın</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
</section>

